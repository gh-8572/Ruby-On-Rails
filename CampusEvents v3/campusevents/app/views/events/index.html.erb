<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Url</th>
	  <th>Sponsor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>

	
		
	
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.url %></td>
		
		<td><% event.sponsors.each do |sponsors| %><%= sponsors.name  %><br><% end %></td>
		
        <td><%= link_to 'Show', event, :class =>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class =>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger" %></td>
      </tr>
   
	<% end %>
	
  </tbody>
</table>

<br>

